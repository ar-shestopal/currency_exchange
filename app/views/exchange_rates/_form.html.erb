<%= form_tag(calculate_path, method: :get) do %>
    <div id="error_expleanation">
    </div>

  <div class="field inline">
    <%= label_tag :date %>
    <%= select_date(@latest_rate, options = {}, html_options = {}) %>
  </div>

  <div class="field inline">
    <%= label_tag :amount %>
    <%= number_field_tag 'amount', 0.0, min: 0.0, step: 0.01 %>
  </div>

  <div class="actions inline">
    <%= submit_tag "Calculate" %>
  </div>
<% end %>
